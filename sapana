  <script>
    const surpriseBtn = document.getElementById('surpriseBtn');
    const hiddenNote = document.getElementById('hiddenNote');

    const surpriseText = `Sapana, I‚Äôve planned a little birthday surprise just for you üíå
Would you mind sharing your address (including any delivery details like building name, floor, or contact number) so I can send it you In Paris üíó? 
I really really really want this surprise to reach you perfectly.`;

    surpriseBtn.addEventListener('click', () => {
      surpriseBtn.disabled = true;
      hiddenNote.textContent = surpriseText;
      hiddenNote.classList.add('show');
      hiddenNote.style.display = 'block';
      hiddenNote.scrollIntoView({ behavior: "smooth", block: "center" });
